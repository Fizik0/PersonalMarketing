# Настройки базы данных
# Формат: postgres://<username>:<password>@<host>:<port>/<database>
DATABASE_URL=postgres://username:password@localhost:5432/portfolio_db

# Настройки безопасности
SESSION_SECRET=your_secret_key_should_be_at_least_32_chars

# Настройки режима работы
NODE_ENV=development
PORT=5000

# Настройки загрузки файлов
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Настройки аутентификации
# Используйте AUTH_MODE=local для локальной разработки
AUTH_MODE=local 